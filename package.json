{
  "name": "vscode-webpack",
  "displayName": "vscode-webpack",
  "description": "webpack extension",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.79.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-webpack.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "vscode-sql.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "vscode-sql.addConnection",
        "title": "Add Connection",
        "icon": "$(add)"
      },
      {
        "command": "vscode-sql.createSqlNotebook",
        "title": "Create SQL Notebook"
      },
      {
        "command": "vscode-sql.showWebview",
        "title": "Show webview Test"
      },
      {
        "command": "vscode-sql.anotherWebview",
        "title": "Show ANOTHER webview"
      },
      {
        "command": "vscode-sql.refresh",
        "title": "Refresh data list view",
        "icon": "$(refresh)"
      },
      {
        "command": "vscode-sql.runSql",
        "title": "Run SQL",
        "icon": "$(play)"
      }
    ],
    "keybindings": [
      {
          "command": "vscode-sql.runSql",
          "key": "ctrl+shift+r",
          "mac": "cmd+shift+r",
          "when": "editorLangId == sql"
      }
    ],
    "configuration": {
      "title": "VsCode webpack",
      "properties": {
        "vscode-webpack.connections": {
          "type": "array",
          "default": [],
          "description": "list of connections"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "databaseExplorer",
          "title": "SQL",
          "icon": "$(database)"
        }
      ]
    },
    "views": {
      "databaseExplorer": [
        {
          "id": "databaseExplorer",
          "name": "DB",
          "icon": "$(database)",
          "contextualTitle": "Database Explorer"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "vscode-sql.addConnection",
          "when": "view == databaseExplorer",
          "group": "navigation"
        },
        {
          "command": "vscode-sql.refresh",
          "when": "view == databaseExplorer",
          "group": "navigation"
        }
      ],
      "editor/context": [{
          "command": "vscode-sql.runSql",
          "when": "editorLangId == sql"
      }]
    },
    "notebooks": [
      {
        "type": "sql-notebook",
        "displayName": "SQL Notebook",
        "selector": [
          {
            "filenamePattern": "*.sql-notebook"
          }
        ]
      }
    ],
    "notebookRenderer": [
      {
        "id": "sql-table-renderer",
        "displayName": "SQL table renderer",
        "entrypoint": "./dist/table-renderer.js",
        "mimeTypes": [
          "vscode-webpack.sql-notebook/table"
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.79.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "ts-loader": "^9.4.3",
    "typescript": "^5.1.3",
    "webpack": "^5.85.0",
    "webpack-cli": "^5.1.1"
  },
  "dependencies": {
    "@types/vscode-notebook-renderer": "^1.72.0",
    "css-loader": "^6.8.1",
    "mysql2": "^3.4.3",
    "simple-datatables": "^7.2.0",
    "style-loader": "^3.3.3"
  }
}
